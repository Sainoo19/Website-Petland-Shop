@using PagedList.Core.Mvc

@model PagedList.Core.IPagedList<Petland_Shop.Models.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Customer"] = "Customer" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-body" style="margin-bottom: 25px;">
    <a style="margin-bottom: 25px;" class="btn btn-primary" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Create">Create</a>
