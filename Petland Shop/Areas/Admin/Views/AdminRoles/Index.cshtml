@model IEnumerable<Petland_Shop.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-content">
    <!-- table hover -->
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>RoleName</th>
                    <th>Description</th>
                    <th> </th>
                    
           
                </tr>
            </thead>
            <tbody>
                @if(Model!=null){
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-bold-500">@item.RoleId</td>
                            <td>@item.RoleName</td>
                            <td class="text-bold-500">@item.Description</td>
                            <td>
                                <div class="btn-group mb-3" role="group" aria-label="Basic example">
                                    <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId">View</a>
                                    <a type="button" class="btn btn-warning" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                    <a type="button" class="btn btn-danger" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                    @*<button type="button" class="btn btn-success"></button>
                                    <button type="button" class="btn btn-warning"></button>
                                    <button type="button" class="btn btn-danger"></button>*@
                                </div>
                            </td>
                            @*<td>Remote</td>
                            <td>Austin,Texas</td>
                            <td><a href="#"><i class="badge-circle badge-circle-light-secondary font-medium-1" data-feather="mail"></i></a></td>*@
                            
                        </tr>
                        

                    }
                }
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminRoles" asp-action="Create">Create</a>
                
            </tbody>
        </table>
    </div>
</div>

